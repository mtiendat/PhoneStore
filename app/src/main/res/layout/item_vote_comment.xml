<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAvatarVote"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAvatarComment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNameVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Tiên Đạt"
        android:textColor="@color/dray"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/cvAvatarVote"
        app:layout_constraintTop_toTopOf="@+id/cvAvatarVote" />

    <TextView
        android:id="@+id/tvVoteDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/dray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tvContentVote"
        app:layout_constraintTop_toBottomOf="@+id/rbDetailVote" />

    <RatingBar
        android:id="@+id/rbDetailVote"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/gold"
        android:stepSize="1"
        app:layout_constraintStart_toStartOf="@+id/tvNameVote"
        app:layout_constraintTop_toBottomOf="@+id/tvNameVote" />

    <TextView
        android:id="@+id/tvContentVote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:maxLines="4"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rbDetailVote"
        app:layout_constraintTop_toBottomOf="@+id/tvVoteDate" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChildImage"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tvContentVote"
        app:layout_constraintStart_toStartOf="@id/tvContentVote"
        app:layout_constraintTop_toBottomOf="@+id/tvContentVote"
        tools:listitem="@layout/item_image_comment" />

    <include

        android:id="@+id/include"
        layout="@layout/layout_like_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/rvChildImage"
        app:layout_constraintTop_toBottomOf="@+id/rvChildImage" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTotalReply"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:background="@color/white"
        android:drawableEnd="@drawable/bg_arrow"
        android:paddingStart="10dp"
        android:stateListAnimator="@null"
        android:text="10 lượt reply"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/rvChildImage"
        app:layout_constraintStart_toStartOf="@+id/include"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_child_reply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/rvChildImage"
        app:layout_constraintStart_toStartOf="@+id/include"
        app:layout_constraintTop_toBottomOf="@+id/btnTotalReply">

    </androidx.recyclerview.widget.RecyclerView>

    <include
        android:id="@+id/sendComment"
        layout="@layout/layout_reply_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/include"
        app:layout_constraintTop_toBottomOf="@id/rv_child_reply" />

    <View
        android:id="@+id/viewVote"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/little_dray"

        app:layout_constraintEnd_toEndOf="@id/tvContentVote"
        app:layout_constraintStart_toStartOf="@id/cvAvatarVote"
        app:layout_constraintTop_toBottomOf="@+id/sendComment" />

</androidx.constraintlayout.widget.ConstraintLayout>