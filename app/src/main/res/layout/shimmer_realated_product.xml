<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivRelatedProductSM"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:background="@color/little_dray"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPriceRelatedProductSM"
            android:layout_width="64dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/little_dray"
            app:layout_constraintStart_toStartOf="@+id/ivRelatedProductSM"
            app:layout_constraintTop_toBottomOf="@+id/ivRelatedProductSM" />

        <TextView
            android:id="@+id/tvPriceRelatedProductSM2"
            android:layout_width="64dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/little_dray"
            app:layout_constraintStart_toStartOf="@+id/tvPriceRelatedProductSM"
            app:layout_constraintTop_toBottomOf="@+id/tvPriceRelatedProductSM" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>