<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="quantity"
            type="String" />

        <variable
            name="isDecreaseEnable"
            type="boolean" />

        <variable
            name="isIncreaseEnable"
            type="boolean" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_layout_quantity">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDecrease"
            style="@style/button_increase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_button_no_corner"
            android:text="-"
            android:enabled="false"
            android:textColor="@color/dray"
            android:textSize="14sp" />

        <View
            android:id="@+id/viewPlus"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:background="@color/dray" />

        <TextView
            android:id="@+id/tvNumItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:fontFamily="@font/sf_pro_text_medium"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/dray"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/viewMinus"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:background="@color/dray" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnIncrease"
            style="@style/button_increase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_button_no_corner"
            android:text="+"
            android:textColor="@color/dray"
            android:enabled="false"
            android:textSize="14sp" />

    </LinearLayout>
</layout>
