<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/rbAddressStore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="10dp"
        android:text="2-14 Võ Văn Ngân, Phường Trường Thọ, Thành phố Thủ Đức, Thành phố Hồ Chí Minh, Việt Nam "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:buttonTint="@color/blue"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/little_dray"
        app:layout_constraintTop_toBottomOf="@+id/rbAddressStore"
        app:layout_constraintStart_toStartOf="@+id/rbAddressStore"
        app:layout_constraintEnd_toEndOf="@+id/rbAddressStore"/>
</androidx.constraintlayout.widget.ConstraintLayout>